<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">






        <ImageView
            android:id="@+id/imageView_request_status"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textView_request_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:text="Request X is Pending"
            android:textSize="18sp"
            android:textColor="@color/list_item_primary"/>
        <TextView
            android:id="@+id/textView_period_request_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:text="Period"
            android:textSize="9sp" />

        <ImageButton
            android:id="@+id/imageView_open_request_status"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="17dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_item_right_black_24dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:minHeight="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >

        <ImageView
            android:id="@+id/imageView_request_status1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/imageView_request_status2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/imageView_request_status3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/imageView_request_status4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop" />


</LinearLayout>




</RelativeLayout>



