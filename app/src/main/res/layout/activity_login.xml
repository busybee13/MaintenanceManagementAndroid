<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout android:layout_height="match_parent"
    android:background="#fff"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:text="Login"
        android:background="#46a66b"
        android:id="@+id/textView_login"
        />

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/editText_email"
        android:inputType="textEmailAddress"
        android:textColor="#87cba2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/textView_login"
        android:hint="Enter your Email: "
        android:textColorHint="#87cba2"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/editText_password"
        android:inputType="textPassword"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/editText_email"
        android:hint="Enter your password: "
        android:layout_marginBottom="10dp"
        android:textColorHint="#87cba2"
        android:layout_marginTop="10dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:text="Submit"
        android:background="#0000FF"
        android:id="@+id/button_submit"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/editText_password"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Don't have account?"
        android:id="@+id/button_signUp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/button_submit"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>

    <View android:layout_height="1dp"
        android:layout_width="120dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view_leftLine"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/button_signUp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <View android:layout_height="1dp"
        android:layout_width="120dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view_RightLine"
        android:layout_marginLeft="170dp"
        android:layout_below="@id/button_signUp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <TextView android:textColorHint="#87cba2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:textColor="#87cba2"
        android:text="or"
        android:id="@+id/textView_or"
        android:layout_below="@+id/button_signUp"
        android:layout_marginTop="7dp"
        android:paddingLeft="3dp"
        android:layout_toRightOf="@+id/view_leftLine" />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_or"
        />


</RelativeLayout>
